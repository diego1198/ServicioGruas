<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Menu">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="60dp"
        android:paddingRight="60dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="217dp"
            android:layout_alignParentTop="true"
            android:layout_marginVertical="40dp"
            android:layout_marginTop="27dp"
            android:gravity="center"
            android:weightSum="1">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="210dp"
                android:layout_weight="0.80"
                android:adjustViewBounds="false"
                android:src="@drawable/logogrua" />
        </LinearLayout>
        <!--android:layout_marginBottom="31dp" distancia desde el margen de a bajo -->
        <Button
            android:id="@+id/btnService"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/plomo"
            android:baselineAligned="false"
            android:letterSpacing="0.2"
            android:text="Service"
            android:textColor="@android:color/background_light"
            android:textSize="15sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            ></LinearLayout>
        <Button
            android:id="@+id/btnOperator"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/plomo"
            android:baselineAligned="false"
            android:letterSpacing="0.2"
            android:text="operator"
            android:textColor="@android:color/background_light"
            android:textSize="15sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            ></LinearLayout>
        <Button
            android:id="@+id/btnCompVehicle"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/plomo"
            android:baselineAligned="false"
            android:letterSpacing="0.2"
            android:text="Comp.Vehicle"
            android:textColor="@android:color/background_light"
            android:textSize="15sp"
            android:textStyle="bold" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            ></LinearLayout>
        <Button
            android:id="@+id/btnClient"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/plomo"
            android:baselineAligned="false"
            android:letterSpacing="0.2"
            android:text="client"
            android:textColor="@android:color/background_light"
            android:textSize="15sp"
            android:textStyle="bold" />

    </LinearLayout>




</RelativeLayout>